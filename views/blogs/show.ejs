        margin-top: 0;
      }

      .post-description li p.first {
        display: inline-block;
      }

      .post-description ul,
      .post-description ol {
        padding-left: 30px;
      }

      .post-description ul :first-child,
      .post-description ol :first-child {
        margin-top: 0;
      }

      .post-description ul :last-child,
      .post-description ol :last-child {
        margin-bottom: 0;
      }

      .post-description dl {
        padding: 0;
      }

      .post-description dl dt {
        font-size: 14px;
        font-weight: bold;
        font-style: italic;
        padding: 0;
        margin: 15px 0 5px;
      }

      .post-description dl dt:first-child {
        padding: 0;
      }

      .post-description dl dt > :first-child {
        margin-top: 0;
      }

      .post-description dl dt > :last-child {
        margin-bottom: 0;
      }

      .post-description dl dd {
        margin: 0 0 15px;
        padding: 0 15px;
      }

      .post-description dl dd > :first-child {
        margin-top: 0;
      }

      .post-description dl dd > :last-child {
        margin-bottom: 0;
      }

      .post-description blockquote {
        border-left: 4px solid #dddddd;
        padding: 0 15px;
        color: #777777;
      }

      .post-description blockquote > :first-child {
        margin-top: 0;
      }

      .post-description blockquote > :last-child {
        margin-bottom: 0;
      }

      .post-description table {
        padding: 0;
      }
      .post-description table tr {
        border-top: 1px solid #cccccc;
        background-color: white;
        margin: 0;
        padding: 0;
      }

      .post-description table tr:nth-child(2n) {
        background-color: #f8f8f8;
      }

      .post-description table tr th {
        font-weight: bold;
        border: 1px solid #cccccc;
        text-align: left;
        margin: 0;
        padding: 6px 13px;
      }

      .post-description table tr td {
        border: 1px solid #cccccc;
        text-align: left;
        margin: 0;
        padding: 6px 13px;
      }

      .post-description table tr th :first-child,
      .post-description table tr td :first-child {
        margin-top: 0;
      }

      .post-description table tr th :last-child,
      .post-description table tr td :last-child {
        margin-bottom: 0;
      }

      .post-description img {
        max-width: 50%;
      }

      .post-description span.frame {
        display: block;
        overflow: hidden;
      }

      .post-description span.frame > span {
        border: 1px solid #dddddd;
        display: block;
        float: left;
        overflow: hidden;
        margin: 13px 0 0;
        padding: 7px;
        width: auto;
      }

      .post-description span.frame span img {
        display: block;
        float: left;
      }

      .post-description span.frame span span {
        clear: both;
        color: #333333;
        display: block;
        padding: 5px 0 0;
      }

      .post-description span.align-center {
        display: block;
        overflow: hidden;
        clear: both;
      }

      .post-description span.align-center > span {
        display: block;
        overflow: hidden;
        margin: 13px auto 0;
        text-align: center;
      }

      .post-description span.align-center span img {
        margin: 0 auto;
        text-align: center;
      }

      .post-description span.align-right {
        display: block;
        overflow: hidden;
        clear: both;
      }

      .post-description span.align-right > span {
        display: block;
        overflow: hidden;
        margin: 13px 0 0;
        text-align: right;
      }

      .post-description span.align-right span img {
        margin: 0;
        text-align: right;
      }

      .post-description span.float-left {
        display: block;
        margin-right: 13px;
        overflow: hidden;
        float: left;
      }

      .post-description span.float-left span {
        margin: 13px 0 0;
      }

      .post-description span.float-right {
        display: block;
        margin-left: 13px;
        overflow: hidden;
        float: right;
      }

      .post-description span.float-right > span {
        display: block;
        overflow: hidden;
        margin: 13px auto 0;
        text-align: right;
      }

      .post-description code,
      .post-description tt {
        margin: 0 2px;
        padding: 0 5px;
        white-space: nowrap;
        border: 1px solid #eaeaea;
        background-color: #f8f8f8;
        border-radius: 3px;
      }

      .post-description pre code {
        margin: 0;
        padding: 0;
        white-space: pre;
        border: none;
        background: transparent;
      }

      .post-description .highlight pre {
        background-color: #f8f8f8;
        border: 1px solid #cccccc;
        font-size: 13px;
        line-height: 19px;
        overflow: auto;
        padding: 6px 10px;
        border-radius: 3px;
      }

      .post-description pre {
        background-color: #f8f8f8;
        border: 1px solid #cccccc;
        font-size: 13px;
        line-height: 19px;
        overflow: auto;
        padding: 6px 10px;
        border-radius: 3px;
      }

      .post-description pre code,
      .post-description pre tt {
        background-color: transparent;
        border: none;
      }
    </style>
