      .post-description a {
        color: #4183c4 !important;
        text-decoration: none;
      }

      .post-description a:hover {
        text-decoration: underline;
      }

      .post-description a.absent {
        color: #cc0000;
      }

      .post-description a.anchor {
        display: block;
        padding-left: 30px;
        margin-left: -30px;
        cursor: pointer;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
      }

      .post-description h1,
      .post-description h2,
      .post-description h3,
      .post-description h4,
      .post-description h5,
      .post-description h6 {
        margin: 20px 0 10px;
        padding: 0;
        font-weight: bold;
        -webkit-font-smoothing: antialiased;
        cursor: text;
        position: relative;
      }

      .post-description h2:first-child,
      .post-description h1:first-child,
      .post-description h1:first-child + h2,
      .post-description h3:first-child,
      .post-description h4:first-child,
      .post-description h5:first-child,
      .post-description h6:first-child {
        margin-top: 0;
        padding-top: 0;
      }

      .post-description h1:hover a.anchor,
      .post-description h2:hover a.anchor,
      .post-description h3:hover a.anchor,
      .post-description h4:hover a.anchor,
      .post-description h5:hover a.anchor,
      .post-description h6:hover a.anchor {
        text-decoration: none;
      }

      .post-description h1 tt,
      .post-description h1 code {
        font-size: inherit;
      }

      .post-description h2 tt,
      .post-description h2 code {
        font-size: inherit;
      }
      .post-description h3 tt,
      .post-description h3 code {
        font-size: inherit;
      }

      .post-description h4 tt,
      .post-description h4 code {
        font-size: inherit;
      }

      .post-description h5 tt,
      .post-description h5 code {
        font-size: inherit;
      }

      .post-description h6 tt,
